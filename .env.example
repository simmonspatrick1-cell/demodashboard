# NetSuite Dashboard Environment Configuration
# Copy this file to .env and fill in your values

# ==========================================
# BACKEND CONFIGURATION
# ==========================================

# Server Configuration
PORT=3001
NODE_ENV=development

# NetSuite Integration
NETSUITE_ACCOUNT_ID=your_netsuite_account_id
ANTHROPIC_API_KEY=sk-ant-api03-your_key_here

# ==========================================
# FRONTEND CONFIGURATION
# ==========================================

# API Configuration
REACT_APP_API_URL=http://localhost:3001
# For production, use your deployed backend URL:
# REACT_APP_API_URL=https://your-backend.herokuapp.com

# ==========================================
# DEPLOYMENT SPECIFIC
# ==========================================

# For Docker deployments
COMPOSE_PROJECT_NAME=netsuite-dashboard

# For cloud deployments (Vercel, Heroku, etc.)
VERCEL_URL=
HEROKU_APP_NAME=

# ==========================================
# OPTIONAL SERVICES
# ==========================================

# Database (if you add one later)
# DATABASE_URL=postgresql://user:pass@localhost:5432/netsuite_db

# Redis (for caching)
# REDIS_URL=redis://localhost:6379

# Monitoring
# SENTRY_DSN=
# LOG_LEVEL=info

# ==========================================
# SECURITY
# ==========================================

# CORS Origins (comma-separated)
# ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3004

# API Keys (keep secret!)
# CLAUDE_API_KEY=sk-ant-api03-your_key_here
